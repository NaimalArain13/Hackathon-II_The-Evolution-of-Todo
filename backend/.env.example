# Database Configuration
# Replace with your actual Neon PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://username:password@ep-cool-name-12345.us-east-2.aws.neon.tech:5432/neondb?sslmode=require

# Database Connection Pool Settings (Optional - defaults shown)
# DB_ECHO=false              # Set to 'true' for SQL query logging in development
# DB_POOL_SIZE=5             # Base connection pool size
# DB_MAX_OVERFLOW=10         # Additional connections beyond pool_size

# Application Settings
# APP_ENV=development        # Environment: development, staging, production
# LOG_LEVEL=INFO             # Logging level: DEBUG, INFO, WARNING, ERROR

# Authentication (existing from Phase 2)
BETTER_AUTH_SECRET=your-shared-secret-key-here
JWT_ALGORITHM=HS256

# ============================================
# Phase 3: AI Chatbot Configuration
# ============================================

# OpenRouter API Key for accessing Groq models
# Get from: https://openrouter.ai/keys
# Free tier: 200k tokens/min, 30 req/min, 1000 req/day
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Optional: OpenRouter app attribution (for rankings)
OPENROUTER_APP_URL=http://localhost:8000
OPENROUTER_APP_NAME=Todo Hackathon App

# MCP Server Configuration
# URL where MCP server endpoint is accessible
# FastMCP is mounted at /api/mcp with default internal path /mcp
# This creates the endpoint at: /api/mcp/mcp
MCP_SERVER_URL=http://localhost:8000/api/mcp/mcp
MCP_TIMEOUT_SECONDS=30

# Agent Model Configuration
# Model: openai/gpt-oss-20b (Groq model via OpenRouter)
# Alternatives via OpenRouter:
#   - meta-llama/llama-3.3-70b-instruct (free)
#   - google/gemini-2.0-flash-exp (free)
#   - mistralai/mistral-7b-instruct (free)
AGENT_MODEL=openai/gpt-oss-20b
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=1000

# Conversation History Management
# Maximum number of recent messages to include in agent context
# Range: 20-100 (50 is recommended balance)
MAX_CONVERSATION_HISTORY=50

# CORS Configuration (for frontend)
# Add your frontend URLs (development and production)
CORS_ORIGINS=http://localhost:3000,https://your-app.vercel.app
